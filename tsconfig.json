{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonJS",
    "strictNullChecks": true,
    "newLine": "LF",
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "types"],
    "lib": ["ESNext", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "./webpack.config.js"],
  "watchOptions": {
    "excludeFiles": ["webpack.config.js", "./webpack.config.js"]
  }
}
